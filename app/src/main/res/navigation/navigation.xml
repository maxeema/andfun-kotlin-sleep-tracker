<!-- Note that the animations may show red in Android Studio;
     however, they are present and working perfectly fine. -->

<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@+id/tracker_frag">

    <fragment
        android:id="@+id/tracker_frag"
        android:name="com.example.android.trackmysleepquality.TrackerFragment"
        android:label="@string/tracker_fragment"
        tools:layout="@layout/fragment_tracker">
        <action
            android:id="@+id/action_TrackerFrag_to_QualityFrag"
            app:destination="@id/quality_frag"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/quality_frag"
        android:name="com.example.android.trackmysleepquality.QualityFragment"
        android:label="@string/quality_fragment"
        tools:layout="@layout/fragment_quality">
        <argument
            android:name="night_id"
            app:argType="long" />
        <action
            android:id="@+id/action_QualityFrag_to_TrackerFrag"
            app:destination="@id/tracker_frag"
            app:launchSingleTop="false"
            app:popUpTo="@+id/tracker_frag"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>
