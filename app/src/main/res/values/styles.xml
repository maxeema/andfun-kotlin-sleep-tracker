<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorBackground</item>

        <item name="fontFamily">@font/amita</item>

        <item name="actionBarTheme">@style/actionbarTheme</item>
        <item name="actionOverflowButtonStyle">@style/actionbarOverflowButton</item>

        <item name="snackbarStyle">@style/snackbar</item>
    </style>

    <style name="actionbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorPrimary">@color/colorBackground</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
    </style>
    <style name="actionbarOverflowButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:contentDescription"></item>
    </style>

    <style name="snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">@dimen/snacks_margin</item>
    </style>

    <style name="button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

</resources>
